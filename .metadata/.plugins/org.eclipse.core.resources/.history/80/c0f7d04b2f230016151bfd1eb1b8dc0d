    //then

  }
  //@Test
  def itShouldAcceptSingleNum: Unit ={
    //given

    //when
    //then
  }
  @Test
  def itShouldAddRationalNums: Unit ={
    //given
    val num1=new Rational(2,4)
    val num2=new Rational(3,6)
    //when
    val sum=num1 add(num2)
    //then
    Assert.assertEquals(sum,1)
